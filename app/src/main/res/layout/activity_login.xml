<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codemaven3015.uniservityapplication.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_launcher_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Registration"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/icon_black">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/user_trans"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <EditText
                android:id="@+id/Name_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_light"
                android:gravity="center"
                android:hint="Student Name"
                android:textSize="@dimen/mediumFont" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/icon_black">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mobile_trans"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <EditText
                android:id="@+id/Mobile_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/grey_light"
                android:gravity="center"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:textSize="@dimen/mediumFont" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/icon_black">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mail_trans"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <EditText
                android:id="@+id/Mail_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/grey_light"
                android:gravity="center"
                android:hint="E-mail"
                android:textSize="@dimen/mediumFont" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:padding="3dp"
                android:layout_alignParentLeft="true"
                android:background="@color/red"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:padding="3dp"
                android:layout_alignParentRight="true"
                android:background="@color/green"
                android:textColor="@color/white"
                />

        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
