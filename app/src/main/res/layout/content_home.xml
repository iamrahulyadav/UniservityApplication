<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.codemaven3015.uniservityapplication.Home"
    tools:showIn="@layout/app_bar_home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <ImageView
                android:id="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:layout_marginTop="40dp"
                android:id="@+id/searchText"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_below="@+id/logo"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/smallFontL"
                android:text="FIND THE COLLEGE/UNIVERSITY FOR YOU"/>


            <Button
                android:layout_below="@+id/searchText"
                android:id="@+id/submitClientButton"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Search Colleges  ➝"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/mediumFont" />

            <TextView
                android:layout_above="@+id/Popular_Product"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/smallFontL"
                android:text="POPULAR COUNTRY TO STUDY ABROAD" />

        <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/Popular_Product"
        android:layout_alignParentBottom="true"
        android:scrollbars="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
